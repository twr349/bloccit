<h1>New Advertisments</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for Advertisments</p>
     <ul>
       <li>Make sure they pay.</li>
       <li>No vegan advertisements.</li>
       <li>No cross-fit advertisements.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @advertisement do |f| %>
       <div class="form-group">
           <%= f.label :title %>
           <%= f.text_field :title, class: 'form-control', placeholder: "Enter Company Name" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.text_area :price, class: 'form-control', placeholder: "Enter price" %>
       </div>
       <div class="form-group">
           <%= f.submit "$ave", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>